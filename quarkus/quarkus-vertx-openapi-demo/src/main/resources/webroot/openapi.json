{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Openapi",
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "summary": "List all posts",
        "operationId": "listPosts",
        "x-vertx-event-bus": "x-vertx-event-bus-address-posts",
        "tags": [
          "posts"
        ],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "How many items to return at one time (max 1000)",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "minimum": 1,
              "maximum": 1000
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A paged array of posts",
            "headers": {
              "x-next": {
                "description": "A link to the next page of responses",
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Posts"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a post",
        "operationId": "createPosts",
        "tags": [
          "posts"
        ],
        "requestBody": {
          "description": "Optional description*",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Post"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Post": {
        "type": "object",
        "required": [
          "title",
          "text",
          "displayName",
          "likes",
          "dislikes"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "minimum": 1
          },
          "title": {
            "type": "string",
            "minimum": 1,
            "maximum": 500
          },
          "text": {
            "type": "string",
            "minimum": 1,
            "maximum": 20000
          },
          "displayName": {
            "type": "string",
            "minimum": 1,
            "maximum": 20000
          },
          "likes": {
            "type": "integer",
            "format": "int64",
            "minimum": 1
          },
          "dislikes": {
            "type": "integer",
            "format": "int64",
            "minimum": 1
          },
          "comments": {
            "type": "object",
            "$ref": "#/components/schemas/Comments"
          },
          "createdDate": {
            "type": "string",
            "format": "date-time",
            "minimum": 1
          },
          "lastModifiedDate": {
            "type": "string",
            "format": "date-time",
            "minimum": 1
          }
        }
      },
      "Posts": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Post"
        }
      },
      "Comment": {
        "type": "object",
        "required": [
          "title",
          "text",
          "displayName",
          "likes",
          "dislikes"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "minimum": 1
          },
          "title": {
            "type": "string",
            "minimum": 1
          },
          "text": {
            "type": "string",
            "minimum": 1
          },
          "displayName": {
            "type": "string",
            "minimum": 1,
            "maximum": 20000
          },
          "likes": {
            "type": "integer",
            "format": "int64",
            "minimum": 1
          },
          "dislikes": {
            "type": "integer",
            "format": "int64",
            "minimum": 1
          },
          "createdDate": {
            "type": "string",
            "format": "date-time",
            "minimum": 1
          },
          "lastModifiedDate": {
            "type": "string",
            "format": "date-time",
            "minimum": 1
          }
        }
      },
      "Comments": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Comment"
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}